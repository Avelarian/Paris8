// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Document {
  id Int @id @default(autoincrement())
  filename String
  words WordsOnDocuments[]
}

model Word {
  id Int @id @default(autoincrement())
  word String
  documents WordsOnDocuments[]
}

model WordsOnDocuments {
  wordFrequency Int

  document       Document     @relation(fields: [documentId], references: [id])
  documentId     Int
  word   Word @relation(fields: [wordId], references: [id])
  wordId Int

  @@id([documentId, wordId])
}
